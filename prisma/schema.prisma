// This is your Prisma schema file,
// learn more about it in the docs: https://pprisma generateris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int         @id @default(autoincrement())
  email        String      @unique
  passwordHash String
  likedBooks   LikedBooks?
  records      Records?
  avatar       String?
}

model LikedBooks {
  id     Int    @id @default(autoincrement())
  user   User   @relation(fields: [userId], references: [id])
  books  Book[]
  userId Int    @unique
}

model Records {
  id     Int    @id @default(autoincrement())
  user   User   @relation(fields: [userId], references: [id])
  books  Book[]
  userId Int    @unique
}

model Book {
  id           Int         @id @default(autoincrement())
  bookId       String      @unique
  LikedBooks   LikedBooks? @relation(fields: [likedBooksId], references: [id])
  likedBooksId Int?
  Records      Records?    @relation(fields: [recordsId], references: [id])
  recordsId    Int?
}
